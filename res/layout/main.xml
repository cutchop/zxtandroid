<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TableLayout
        android:id="@+id/layTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/titlebg"
        android:stretchColumns="1" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:background="#002E3E">

            <TextView
                android:id="@+id/txtDeviceName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dip"
                android:text="设备名称"
                android:textColor="@color/titlefontcolor" android:textAppearance="?android:attr/textAppearanceMedium"/>

            <TextView
                android:id="@+id/txtSystemTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dip"
                android:text="2012-04-06 12:12:12"
                android:textColor="@color/titlefontcolor" android:layout_gravity="center" android:textAppearance="?android:attr/textAppearanceMedium"/>

            <TextView
                android:id="@+id/txtSchoolName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dip"
                android:text="驾校名称"
                android:textColor="@color/titlefontcolor" android:textAppearance="?android:attr/textAppearanceMedium"/>

        </TableRow>
    </TableLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ViewFlipper
            android:id="@+id/flipper"
            android:layout_width="fill_parent"
            android:layout_height="330dp" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/contentborder"
                android:paddingBottom="1dip" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="328dip"
                    android:layout_weight="1"
                    android:background="#222126"
                    android:orientation="vertical"
                    android:visibility="visible" android:layout_marginRight="1dp">

                    <LinearLayout
                        android:id="@+id/layStudentTitle"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg1"
                        android:paddingLeft="3dip" >

                        <TextView
                            android:id="@+id/txtStudentTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="学员:"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/labelfont" />

                        <TextView
                            android:id="@+id/txtStudentName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="3dip"
                            android:text="姓名"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/labelfont" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layStudentInfo"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:orientation="vertical"
                        android:visibility="visible" android:layout_marginTop="10dp">

                        <cn.whzxt.android.NetImageView
                            android:id="@+id/imgStudent"
                            android:layout_width="102dip"
                            android:layout_height="126dip"
                            android:layout_gravity="center"
                            android:src="@drawable/photo" />

                        <TextView
                            android:id="@+id/txtStudentCard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dip"
                            android:paddingLeft="10dp"
                            android:text="卡号:" android:textColor="#FFFFFF"/>

                        <TextView
                            android:id="@+id/txtBalance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dip"
                            android:paddingLeft="10dp"
                            android:text="剩余:"
                            android:textColor="#FFFFFF" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btnSubject"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_checked_bg"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dp" android:layout_gravity="center" android:layout_marginRight="3dp" android:layout_marginLeft="3dp">

                        <TextView
                            android:id="@+id/txtSubject"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="科目二"
                            android:textAppearance="?android:attr/textAppearanceMedium" android:textColor="#FFFFFF"/>

                        <TextView
                            android:id="@+id/txtSubjectInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="点击切换为科目三" android:textColor="#CCCCCC" android:textSize="12sp"/>

                    </LinearLayout>
                    
                    <LinearLayout
                        android:id="@+id/layScrollDown"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/button_checked_bg"
                        android:clickable="true"
                        android:gravity="center" android:layout_gravity="center" android:layout_marginLeft="3dp" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_marginRight="3dp">



                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="模拟考试"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/card_text" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="328dip"
                    android:layout_weight="0.5"
                    android:orientation="vertical" android:layout_marginRight="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#3fb8e5"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text=" "
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/white" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/camCanvas"
                        android:layout_width="fill_parent"
                        android:layout_height="220dip" >

                        <SurfaceView
                            android:id="@+id/previewSurface"
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="0.3"
                            android:clickable="true" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical" >

                            <ImageView
                                android:id="@+id/imgLast01"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="1dip"
                                android:layout_marginLeft="1dip"
                                android:layout_weight="1"
                                android:background="#111111"
                                android:clickable="true"
                                android:scaleType="centerCrop" />

                            <ImageView
                                android:id="@+id/imgLast02"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="1dip"
                                android:layout_marginLeft="1dip"
                                android:layout_weight="1"
                                android:background="#111111"
                                android:clickable="true"
                                android:scaleType="centerCrop" />

                            <ImageView
                                android:id="@+id/imgLast03"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="1dip"
                                android:layout_marginLeft="1dip"
                                android:layout_weight="1"
                                android:background="#111111"
                                android:clickable="true"
                                android:scaleType="centerCrop" />

                            <ImageView
                                android:id="@+id/imgLast04"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="1dip"
                                android:layout_weight="1"
                                android:background="#111111"
                                android:clickable="true"
                                android:scaleType="centerCrop" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:background="@color/contentborder"
                        android:orientation="vertical" >
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="88dip">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="0.4"
                            android:orientation="vertical" android:background="#111111" android:layout_marginRight="1dp">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content" android:background="@drawable/button_checked_bg" android:gravity="center">

                                <TextView
                                    android:id="@+id/textView5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="GPS"
                                    android:textAppearance="?android:attr/textAppearanceMedium" android:layout_gravity="center" android:textColor="#FFFFFF"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:layout_gravity="center" android:paddingTop="8dp">

                                <TextView
                                    android:id="@+id/txtGPSSpeed"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="32sp" android:textColor="#FFFFFF"/>

                                <TextView
                                    android:id="@+id/textView4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="km/h" android:textColor="#FFFFFF" android:layout_marginLeft="3dp"/>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="0.3"
                            android:orientation="vertical" android:background="#111111" android:layout_marginRight="1dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:background="@drawable/button_checked_bg" android:gravity="center">

                                <TextView
                                    android:id="@+id/TextView01"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="培训计时"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textColor="#FFFFFF"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:layout_gravity="center" android:paddingTop="8dp">

                                <TextView
                                    android:id="@+id/txtTrainTime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="5dip"
                                    android:text="训练停止"
                                    android:textColor="#FFFFFF"
                                    android:textSize="32sp" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="0.4"
                            android:orientation="vertical" android:background="#111111">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:background="@drawable/button_checked_bg" android:gravity="center">

                                <TextView
                                    android:id="@+id/TextView03"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="SEN"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textColor="#FFFFFF" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:paddingTop="8dp" android:layout_gravity="center">

                                <TextView
                                    android:id="@+id/txtSensor"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="32sp" android:textColor="#FFFFFF"/>

                                <TextView
                                    android:id="@+id/TextView02"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="km/h" android:textColor="#FFFFFF" android:layout_marginLeft="3dp"/>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="328dp"
                    android:layout_weight="1"
                    android:background="#222126"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/layCoachTitle"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg1"
                        android:paddingLeft="3dip" >

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="教练:"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/labelfont" />

                        <TextView
                            android:id="@+id/txtCoachName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="3dip"
                            android:text="姓名"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/labelfont"
                            android:visibility="visible" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layCoachInfo"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:orientation="vertical"
                        android:visibility="visible" android:layout_marginTop="10dp">

                        <cn.whzxt.android.NetImageView
                            android:id="@+id/imgCoach"
                            android:layout_width="102dip"
                            android:layout_height="126dip"
                            android:layout_gravity="center"
                            android:src="@drawable/photo" />

                        <TextView
                            android:id="@+id/txtCoachCard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dip"
                            android:paddingLeft="10dp"
                            android:text="卡号:"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/txtCoachCertificateLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dip"
                            android:paddingLeft="10dp"
                            android:text="等级:"
                            android:textColor="#FFFFFF" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btnMode"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_checked_bg"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_gravity="center" android:layout_marginLeft="3dp" android:layout_marginRight="3dp" android:paddingTop="5dp" android:paddingBottom="5dp">

                        <TextView
                            android:id="@+id/txtMode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="训练状态"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/txtModeInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="点击切换为自由状态"
                            android:textColor="#CCCCCC"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" android:layout_marginLeft="3dp" android:layout_marginRight="3dp" android:layout_marginTop="5dp">


                        <LinearLayout
                            android:id="@+id/btnRestart"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_checked_bg"
                            android:clickable="true"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp" >

                            <TextView
                                android:id="@+id/TextView04"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="重启"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#FFFFFF" />
                        </LinearLayout>




                        <LinearLayout
                            android:id="@+id/btnShutdown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_checked_bg"
                            android:clickable="true"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp" >

                            <TextView
                                android:id="@+id/TextView05"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="复位"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#FFFFFF" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:background="@color/contentborder">

                <ScrollView
                    android:id="@+id/scrollView1"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" >

                    <LinearLayout
                        android:id="@+id/layTts"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >
                    </LinearLayout>

                </ScrollView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="9"
                    android:background="#111111"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/btnReturnToMain"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:background="@drawable/button_checked_bg"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp" >

                        <TextView
                            android:id="@+id/TextView14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="主界面"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#FFFFFF" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" android:background="#111111">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:id="@+id/btnLoggerReturn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical" android:background="@drawable/button_checked_bg" android:clickable="true" android:gravity="center" android:paddingBottom="10dp" android:paddingLeft="5dp" android:paddingRight="5dp" android:paddingTop="10dp" android:layout_marginBottom="5dp" android:layout_marginLeft="5dp" android:layout_marginTop="5dp">

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="返回主界面" android:textAppearance="?android:attr/textAppearanceMedium" android:textColor="#FFFFFF"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btnLogger"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/button_checked_bg"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp" android:paddingLeft="5dp" android:paddingRight="5dp">

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="刷新日志"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#FFFFFF" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtDebug"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:singleLine="false"
                        android:text="TextView" android:textColor="#FFFFFF"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/txtLogger"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:minLines="5"
                    android:padding="3dp"
                    android:scrollbars="vertical"
                    android:singleLine="false"
                    android:text="查看日志请点击刷新按钮"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

        </ViewFlipper>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="false"
            android:background="@color/titlebg"
            android:stretchColumns="1" >

            <View
                android:layout_height="1dip"
                android:background="@color/titleborder" />

            <TableRow
                android:id="@+id/tableRow5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:background="#111111">

                <TextView
                    android:id="@+id/txtGPSStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:padding="3dip"
                    android:text="GPS正常"
                    android:textColor="@color/titlefontcolor" />

                <TextView
                    android:id="@+id/txtStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dip"
                    android:text="等待上传GPS数据"
                    android:textColor="@color/titlefontcolor" android:layout_gravity="center" android:clickable="true"/>

                <TextView
                    android:id="@+id/txtNetworkStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dip"
                    android:text="网络正常"
                    android:textColor="@color/titlefontcolor" />

            </TableRow>
        </TableLayout>
    </RelativeLayout>

</LinearLayout>